# Secrux AI Service standalone docker-compose environment
# Copy to `.env` and adjust for your environment.

AI_PORT=5156

# -----------------------------------------------------------------------------
# Service-to-service token (must match `secrux-server` -> `secrux.ai.service.token`)
# -----------------------------------------------------------------------------
SECRUX_AI_SERVICE_TOKEN=local-dev-token

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
AI_POSTGRES_DB=secrux_ai
AI_POSTGRES_USER=secrux_ai
AI_POSTGRES_PASSWORD=secrux_ai
AI_DATABASE_URL=postgresql+psycopg://secrux_ai:secrux_ai@ai-postgres:5432/secrux_ai

# -----------------------------------------------------------------------------
# Optional: LLM settings (leave empty to disable live LLM calls)
# -----------------------------------------------------------------------------
SECRUX_AI_LLM_BASE_URL=
SECRUX_AI_LLM_API_KEY=
SECRUX_AI_LLM_MODEL=

# -----------------------------------------------------------------------------
# Optional: prompt dump (debug)
# off | file | stdout
# -----------------------------------------------------------------------------
SECRUX_AI_PROMPT_DUMP=off
SECRUX_AI_PROMPT_DUMP_DIR=/app/storage/prompt-dumps
SECRUX_AI_PROMPT_DUMP_FILE_STRATEGY=target
SECRUX_AI_PROMPT_DUMP_FILTER_PURPOSE=review
SECRUX_AI_PROMPT_DUMP_FILTER_JOB_ID=
SECRUX_AI_PROMPT_DUMP_FILTER_TARGET_ID=
SECRUX_AI_PROMPT_DUMP_FILTER_AGENT=
SECRUX_AI_PROMPT_DUMP_FILTER_MODE=
SECRUX_AI_PROMPT_DUMP_INCLUDE_RESPONSE=false
SECRUX_AI_PROMPT_DUMP_INCLUDE_FINDING=false
SECRUX_AI_PROMPT_DUMP_INCLUDE_ENRICHMENT=false
SECRUX_AI_PROMPT_DUMP_MAX_CHARS=200000

